{
  // ── Overall label dimensions ────────────────────────────────────────────────
  "dimensions": {
    "width": "287pt", // total label width (in points)
    "height": "95.7pt" // total label height (in points)
  },

  // ── Border styling ─────────────────────────────────────────────────────────
  "border": {
    "thickness": "2.5pt" // border line thickness around each label
  },

  // ── Font configuration ─────────────────────────────────────────────────────
  "fonts": {
    "family": "Arial, sans-serif", // fallback font-family list
    "sizes": {
      "topLabel": "5pt", // font-size for the small header labels (e.g. "Quantity")
      "topValue": "7pt", // font-size for the header values (e.g. "5")
      "cellBody": "8pt", // default font-size for most cell text
      "partLabel": "4pt", // font-size for the "Part Number" label
      "partValue": "13pt", // font-size for the actual part-number value
      "descLabel": "6pt", // font-size for description labels within the body
      "descValue": "7pt", // font-size for the material-description text
      "placeholder": "5pt", // font-size for the "No Picture Here" placeholder
      "bottomLabel": "6pt", // font-size for the bottom-row labels (e.g. "Kanban")
      "station": "8pt" // font-size for the station code at the very bottom
    }
  },

  // ── Internal paddings and gutters ──────────────────────────────────────────
  "paddings": {
    "cell": "1pt", // padding inside each table cell
    "stackGap": "2pt", // vertical gap between stacked rows in the body
    "rowGutter": "5pt" // vertical space between adjacent labels
  },

